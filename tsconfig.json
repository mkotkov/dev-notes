{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],      
    },
    "target": "ES2020",          
    "lib": ["DOM", "ES2020"],    
    "module": "ESNext",          
    "moduleResolution": "Node",
    "strict": true,                        
    "esModuleInterop": true,
    "types": [],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
    "verbatimModuleSyntax": true
  },
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}