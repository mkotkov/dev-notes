---
interface Props {
  title: string;
  date: Date;
  slug: string;
  tags?: string[];
  summary: string;
}

const { title, date, slug, tags, summary } = Astro.props;
---

<article
  class="w-xl border rounded-xl p-5"
  data-post
  data-title={title}
  data-tags={tags?.join(' ') ?? ''}
>
  <h3 class="text-2xl font-semibold">
    <a href={`/posts/${slug}`}>{title}</a>
  </h3>

  <p class="text-l text-gray-400">{summary}</p>

  <time class="text-sm text-gray-400">{date.toLocaleDateString("en-EN")}</time>

  {tags && (
    <ul class="flex gap-2 mt-2">
      {tags.map(tag => (
        <li class="text-xs bg-gray-700 px-2 py-1 rounded">{tag}</li>
      ))}
    </ul>
  )}
</article>
